<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <!-- change later to button (checkbox?) -->

        <ImageView
            android:id="@+id/ivCheckBox"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_check_box_outline_blank_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTopLayoutTodoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTodoItemTitle"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Test TodoItem Title"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/ivExpandTodoList"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="10dp"
                android:background="@color/light_grey" />

            <LinearLayout
                android:id="@+id/llBottomLayoutTodoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility = "visible"
                >
                <TextView
                    android:id="@+id/tvTodoItemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test TodoItem Description"
                    android:textSize="22sp" />

            </LinearLayout>





        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>