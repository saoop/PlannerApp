<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <!-- change later to button (checkbox?) -->

        <ImageView
            android:id="@+id/ivCheckBox"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_check_box_outline_blank_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTodoItemTitle"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textSize="22sp"
                android:text="Test TodoItem Title"
                />

            <TextView
                android:id="@+id/tvTodoItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Test TodoItem Description"
                />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>